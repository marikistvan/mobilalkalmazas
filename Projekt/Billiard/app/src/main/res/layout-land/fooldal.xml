<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#4793AF">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/main"
        android:background="#8B322C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/open"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nyitvatartás"
            android:textColor="#DD5746"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/monday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hétfő : 16:00-22:00"
            android:textColor="#FFC470"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/thuesday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="kedd : 16:00-22:00"
            android:textColor="#FFC470"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/monday" />
        <TextView
            android:id="@+id/wednesday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="szerda : 16:00-22:00"
            android:textColor="#FFC470"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/thuesday" />
        <TextView
            android:id="@+id/thursday"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="csütörtök : 16:00-22:00"
            android:textColor="#FFC470"
            android:textSize="18sp"        android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@id/wednesday" />
        <TextView
            android:id="@+id/friday"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="péntek : 16:00-2:00"
            android:textColor="#FFC470"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/thursday" />
        <TextView
            android:id="@+id/saturday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="szombat: 16:00-2:00"
            android:textColor="#FFC470"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/friday" />
        <TextView
            android:id="@+id/sunday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="vasárnap: 16:00-2:00"
            android:textColor="#FFC470"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/saturday" />

    </LinearLayout>
</LinearLayout>