<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BilliardListActivity">

    <ImageView
        android:id="@+id/duck"
        android:layout_width="154dp"
        android:layout_height="153dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/duck"
        tools:layout_editor_absoluteY="25dp" />
    
    <TextView
        android:id="@+id/Szoveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@id/duck"
        app:layout_constraintBaseline_toTopOf="@id/duck"
        android:text="@string/somethingGood"
        />

</androidx.constraintlayout.widget.ConstraintLayout>